#!/usr/bin/env ruby
require 'optparse'

options = {}

OptionParser.new do |opts|
  opts.on '-f',
    '--file FILE',
    "Input file path for check" do |path|

    options[:file] = path
  end
end.parse!

puts options[:file]
`docker run -e RUN=#{options[:file]} -v #{File.dirname(options[:file])}:#{File.dirname(options[:file])}:ro -v /var/utils/checker:/var/utils/checker:ro -w /var/utils/checker -n=false -m=26m -rm=true rubysafe bash -c -l 'bin/rspec'`
